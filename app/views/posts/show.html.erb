<p class="show_back"><%= link_to "一覧に戻る",:posts %></p>

<div class="show_top">
  <h4><%= @post.title %></h4>
  <div><%= link_to "編集",[:edit,@post],{class:"button"} %></div>
</div>

<table class="show_table">
  <tr>
    <th>開始日</th>
    <td><%= @post.start_date.to_s(:datetime_jp) %></td>
  <tr>
  <tr>
    <th>終了日</th>
    <td><%= @post.end_date.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @post.all_day %>
        ○
      <% else %>
      <% end %>
      </td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @post.memo %></td>
  </tr>
</table>



