<h3>予定一覧</h3>

<h4><%= @post.title %></h4>

<table>
    <tr>
      <th>開始日</th>
      <td><%= @post.start_date.to_s(:datetime_jp) %></td>
    <tr>
    <tr>
      <th>終了日</th>
      <td><%= @post.end_date.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td><%= @post.all_day %></td>
    </tr>
    <tr>
      <th>メモ</th>
      <td><%= @post.memo %></td>
    </tr>
</table>

<p><%= link_to "一覧に戻る",:posts %></p>
<p><%= link_to "編集",[:edit,@post] %>

