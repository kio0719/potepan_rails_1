<h3 class="new_edit_title">予定の新規追加</h3>

<% if flash[:warning] %>
  <p class="warming"><%= flash[:warning] %></p>
<% end %>

<%= render "shared/error",obj:@post %>

<%= form_with model: @post do |f| %>
  <table class="new_edit_table">
    <tr>
      <th><%= f.label :title,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_date,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>
    <tr>
      <th><%= f.label :end_date,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day,"終日の場合はチェックを入れます" %></th>
      <td><%= f.check_box :all_day %></td>
    </tr>
    <tr>
      <th><%= f.label :memo,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %>
    <tr>
  </table>

  <ul class="new_edit_bottom">
    <li><%= link_to "キャンセル", :posts,{class:"cancel"} %></li>
    <li><%= f.submit "保存",{class:"submit"} %></li>
  </ul>
<% end %>